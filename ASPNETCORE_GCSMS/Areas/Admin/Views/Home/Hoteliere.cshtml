@model IEnumerable<ASPNETCORE_GCSMS.Areas.Admin.Models.FormationViewModel>
@{
	ViewData["Title"] = "Hoteliere";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (!String.IsNullOrEmpty(Context.Request.QueryString.ToString()))
{
	<p class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		Enregistrement effectué avec succèes.
	</p>
}

@foreach (var item in Model)
{

	if (item.Position == 1)
	{
		<h2>Présentation du service</h2>
		@Html.Raw(item.Content)
		<a asp-action="EditeServiceHoteliere" asp-controller="Home" class="btn btn-default">Editer</a>
		<hr/>
	}



	if (item.Position == 2)
	{
		<h2>Contenu du Service</h2>

		<div>
			@Html.Raw(item.Content)
		</div>

		<a asp-action="EditeContenuHoteliere" asp-controller="Home" class="btn btn-default">Editer</a>
	}

	if (item.Position == 3)
	{
		<h2>Contenu des Modals</h2>
		@Html.Raw(item.Content)
		<br />

		<button>Editer</button>
	}
}