@using System.Security.Claims;


<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Administration</title>

	<link rel="stylesheet" id="bootstrap-css" href="~/lib/bootstrap/dist/css/bootstrap.css" type="text/css" media="all">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
	<link href="~/css/Admin/admin.min.css" rel="stylesheet" />
</head>
<body>
	@*Header Top Section*@
	<div class="container-fluid">
		<div class="jumbotron jumbotron-fluid">
			<h1 class="display-3">Administration</h1>
			<p class="lead">Bienvenue sur la page d'administration du site du GCSMS.</p>
		</div>
	</div>

	@*SideMenu*@
	<div class="container-fluid sidemenu">
		<div class="row">
			<div class="col-sm-1">
				<nav class="navbar navbar-default sidebar" role="navigation">
					<div class="container-fluid">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>

						<div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
							<ul class="nav navbar-nav">
								<li><a asp-controller="Home" asp-action="Index">Accueil<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-home"></span></a></li>
								@*USERS RIGHTS MANAGEMENT*@

								@{
									//Role Administrateur
									if (User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value == "SuperAdmin")
									{
										//TRAINING MENU
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">Formations <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-book"></span></a>
											<ul class="dropdown-menu forAnimate" role="menu">
												<li><a asp-controller="Home" asp-action="Hoteliere">Hôtelière</a></li>
												<li><a asp-controller="Home" asp-action="RH">RH</a></li>
												<li><a asp-controller="Home" asp-action="Informatique">Informatique</a></li>
												<li><a asp-controller="Home" asp-action="Ethique">Philosophie et éthique</a></li>
											</ul>
										</li>
										<li><a asp-controller="Home" asp-action="Utilisateur">Utilisateurs<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-user"></span></a></li>

										//MY POSTS MENU
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">Posts <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-tags"></span></a>
											<ul class="dropdown-menu forAnimate" role="menu">
												<li><a asp-controller="Home" asp-action="Posts">Mes Posts</a></li>
												<li><a href="#">Actualité</a></li>
											</ul>
										</li>

										//MENU FREE PLACES
										<li><a asp-controller="Home" asp-action="PlaceLibre">Places Libres<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-eye-open"></span></a></li>
									}
									//Role Administrateur
									if (User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value == "Administrateur")
									{
										// MENU FORMATION
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">Formations <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-book"></span></a>
											<ul class="dropdown-menu forAnimate" role="menu">
												<li><a asp-controller="Home" asp-action="Hoteliere">Hôtelière</a></li>
												<li><a asp-controller="Home" asp-action="RH">RH</a></li>
												<li><a asp-controller="Home" asp-action="Informatique">Informatique</a></li>
												<li><a asp-controller="Home" asp-action="Ethique">Philosophie et éthique</a></li>
											</ul>
										</li>
										<li><a asp-controller="Home" asp-action="Utilisateur">Utilisateurs<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-user"></span></a></li>

										//MY POSTS MENU
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">Posts <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-tags"></span></a>
											<ul class="dropdown-menu forAnimate" role="menu">
												<li><a asp-controller="Home" asp-action="Posts">Mes Posts</a></li>
												<li><a href="#">Actualité</a></li>
											</ul>
										</li>

										//MENU FREE PLACES
										<li><a asp-controller="Home" asp-action="PlaceLibre">Places Libres<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-eye-open"></span></a></li>
									}

									//Role Editeur
									if (User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role).Value == "Editeur")
									{
										//MENU FREE PLACES
										<li><a asp-controller="Home" asp-action="PlaceLibre">Places Libres<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-eye-open"></span></a></li>

										//MY POSTS MENU
										<li class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">Posts <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-tags"></span></a>
											<ul class="dropdown-menu forAnimate" role="menu">
												<li><a asp-controller="Home" asp-action="Posts">Mes Posts</a></li>
												<li><a href="#">Actualité</a></li>
											</ul>
										</li>
									}
								}
								<li><a asp-area="Adherent" asp-controller="Home" asp-action="Index">Espace Adhérent<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-th-list"></span></a></li>

								<li>
									<form asp-area="Account" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm bs-sidebar-navbar-collapse-1" style="margin-left:16px;">
										<button style="margin-left:-8%;" type="submit" class="btn btn-link navbar-btn navbar-link"><span style="padding-right:50%;"> Déconnexion</span> <img src="~/Images/logout.jpg" alt="Déconnexion" width="25" height="25" style="margin-right:13px" /></button>
									</form>
								</li>
							</ul>

						</div>

					</div>
				</nav>
			</div>
		</div>
	</div>




	<div class="container">
		<div class="row">
			<div class="col-md-12">
				@RenderBody()
			</div>
		</div>
	</div>


	<div class="footer_section">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="footer-copyright">
						<p> Copyright  2017 - GCSMS </p>
					</div>
				</div>
			</div>
		</div>
	</div>


	<environment include="Development">
		<script src="~/lib/jquery/dist/jquery.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
		<script src="~/lib/ckeditor/ckeditor.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
				asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
				asp-fallback-test="window.jQuery"
				crossorigin="anonymous"
				integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
		</script>
		<script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
				asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
				asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
				crossorigin="anonymous"
				integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
		</script>
		<script src="~/lib/ckeditor/ckeditor.js"></script>
	</environment>

	@RenderSection("scripts", required: false)
</body>
</html>
