@model ModalTicketViewModel

@{
	Layout = null;
}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Contact</h4>
</div>
	<div class="modal-body">

		@using (Html.BeginForm())
		{
			<div class="form-horizontal">
				<div class="form-group">
					<div class="col-md-12">
						<label asp-for="Nom" class="control-label alignleft"></label>
						<input asp-for="Nom" class="form-control">

						<label asp-for="Email" class="control-label alignleft"></label>
						<input asp-for="Email" class="form-control">

						<label asp-for="Message" class="control-label alignleft"></label>
						<textarea rows="10" cols="50" asp-for="Message" class="form-control"></textarea>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-info btn-lg etablissement" data-toggle="modal" data-target="#myModal" style="margin-left:30%;">
							<span class="glyphicon glyphicon-ok">
								Envoyer
							</span>
						</button>
					</div>
				</div>
			</div>
		}
	</div>